
<div class="sections index">
  <h2>Subjects</h2>

  <%= link_to("Add New Subject", new_subject_path) %>


  <table class="table table-striped table-hover table-condensed">
  <thead class="thead-default">
  <tr>
    <th>#</th>
    <th>Subject</th>
    <th>Visible</th>
    <th>Pages</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @subjects.each do |subject| %>
  <tr>
    <th scope="row"><%= subject.position %></th>
    <td><%= subject.name %></td>
    <td><%= subject.visible %></td>
    <td><%= subject.pages.size %></td>
    <td>
      <%= link_to(' Pages', subject_pages_path(subject), :class => "btn btn-info glyphicon glyphicon-attach glyphiconcontent") %>
      <%= link_to 'Show', subject_path(subject), :class => "btn btn-info glyphicon glyphicon-attach glyphiconcontent" %>
      <%= link_to '', edit_subject_path(subject), :class => "btn btn-info glyphicon glyphicon-pencil glyphiconcontent" %>
      <%= link_to '', subject, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger glyphicon glyphicon-trash glyphiconcontent" %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>

</div>
