<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%#= render 'layouts/navigation' %>
<%= render 'layouts/messages' %>
<div class="container">
  <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle glyphicon glyphicon-user glyphiconhead" data-toggle="dropdown" , title="User"></a>
          <ul class="dropdown-menu">
            <li><%= link_to "#{current_user.role}", "#" %></li>
            <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
        <% if current_user.role == 'Root' %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle glyphicon glyphicon-wrench glyphiconhead" data-toggle="dropdown"></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'OUTILS', '#' %></li>
              </ul>
            </li>
        <% end %>

    <% else %>
        <!--<li><%= link_to "Sign up", new_user_registration_path %></li>-->
        <li><%= link_to "", new_user_session_path(login_options), class: "glyphicon glyphicon-log-in glyphiconhead", :title => "Log in" %></li>
    <% end %>

  </ul>
  <%= yield %>
</div>
<%#= render 'layouts/footer' %>
<%= debug(params) if Rails.env.development? %>

</body>
</html>
